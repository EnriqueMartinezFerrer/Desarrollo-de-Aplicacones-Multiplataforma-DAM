<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/constraintSelected"
    tools:context=".Activity2">
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#F4A261"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:id="@+id/lista_recycler"
        android:background="#E9C46A"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:background="#2A9D8F">
        <ImageView
            android:id="@+id/imagen_elemento"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/texto_Descripcion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/texto_Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imagen_elemento"
            app:layout_constraintTop_toTopOf="@+id/imagen_elemento"
            app:layout_constraintBottom_toTopOf="@+id/texto_Descripcion"/>

        <TextView
            android:id="@+id/texto_Descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/imagen_elemento"
            app:layout_constraintTop_toBottomOf="@+id/texto_Nombre"
            app:layout_constraintLeft_toRightOf="@+id/imagen_elemento"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteX="267dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>